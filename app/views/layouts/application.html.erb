<!DOCTYPE html>
<html>
  <head>
    <title>OnlyMembers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="navbar">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
    			<h1 class="title is-5">Only Members</h1>
    		<% end %>
      </div>

      <div id="navbarExample" class="navbar-menu">
				<div class="navbar-end">
          <div class="navbar-item">
					  <div class="field is-grouped">
              <% if member_signed_in? %>
                <p class="control">
                  <%= link_to current_member.username, edit_member_registration_path, class: "button is-info" %>
                </p>
                <p>
                  <%= link_to "Logout", destroy_member_session_path, method: :delete, class:"button is-info" %>
                </p>
              <% else %>
              <p class="control">
                <%= link_to 'Sign In', new_member_session_path, class: "button is-info" %>
              </p>
  						<p class="control">
                <%= link_to 'Sign Up', new_member_registration_path, class: "button is-info" %>
              </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
