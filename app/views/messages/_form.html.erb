
<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :message, label: "Leave a message about someone", input_html: { class: "textarea "}, wrapper: false,
      label_html: {class: "label"}, placeholder: "What's the tea??", autofocus: true %>
    </div>
  </div>

  <%= f.button :submit %>
<% end %>
